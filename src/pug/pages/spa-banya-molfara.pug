    canvas.background__canvas
  <div class="scroll is-visible"></div>
  section.secondory-page-hero
    .secondory-page__text-wrap.container
      h1.secondory-page__title Баня Мольфара
      p.secondory-page__description Баня у вигляді орлиного гнізда з таємничими оздоровлюючими ритуалами

    .swiper 
      .swiper-wrapper
        .swiper-slide 
          +img("spa-pages/banya-molfara.jpg")
        .swiper-slide 
          +img("spa-pages/banya-molfara.jpg")
      .secondory-page-hero__mask
      .swiper-buttons-container
        .swiper-button-prev
          +svg('spa-slider-arrow')
        .swiper-button-next
          +svg('spa-slider-arrow')
        .swiper__amount
          .swiper__current
            span(data-first-digit)
          .swiper__divider /
          .swiper__all(data-total)
