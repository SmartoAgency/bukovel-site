    var title_page = 'spa-banya-molfara'
    var id_page = 'id-page-spa-banya-molfara'
    var class_page = 'class-page-spa-banya-molfara'
    var headerCustomClass = 'type1' 
    var breadcrumbsSubitem = [
      {
        label: 'About',
        link: pagesLink[0].about
      }
    ]

block meta
  title= title_page
  meta(name='description' content='')
block head
