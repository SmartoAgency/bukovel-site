
extends ../layout/main
block variable
  -
    var title_page = 'spa-swimming-pool-laguna'
    var id_page = 'id-page-spa-swimming-pool-laguna'
    var class_page = 'class-page-spa-swimming-pool-laguna'
    var headerCustomClass = 'type1' 
    var breadcrumbsSubitem = [
      {
        label: 'About',
        link: pagesLink[0].about
      }
    ]

block meta
  title= title_page
  meta(name='description' content='')
block head
  link(rel='stylesheet' href="./assets/styles/main.min.css")
block scripts
  script(defer src='./assets/scripts/vendors.bundle.js')
  script(defer src='./assets/scripts/header.bundle.js')
  script(defer src='./assets/scripts/swimmingPoolLaguna.bundle.js')
block content
  .background
    canvas.background__canvas
  <div class="scroll is-visible"></div>
  section.secondory-page-hero
    .secondory-page__text-wrap.container
      h1.secondory-page__title Басейн "Лагуна"
      p.secondory-page__description Басейн у форматі біодизайну з формою, що відтворює природну водойму

    .swiper 
      .swiper-wrapper
        .swiper-slide 
          +img("spa-pages/swimming-pool-laguna.jpg")
        .swiper-slide 
          +img("spa-pages/swimming-pool-laguna.jpg")
      .secondory-page-hero__mask
      .swiper-buttons-container
        .swiper-button-prev
          +svg('spa-slider-arrow')
        .swiper-button-next
          +svg('spa-slider-arrow')
        .swiper__amount
          .swiper__current
            span(data-first-digit)
          .swiper__divider /
          .swiper__all(data-total)

block footer
  include ../includes/footer.pug

block header
  include ../includes/header.pug
